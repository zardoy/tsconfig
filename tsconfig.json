{
    "compilerOptions": {
        // todo read about https://www.typescriptlang.org/tsconfig#rootDirs
        "target": "ESNext",
        // module
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        //
        "jsx": "react",
        // "jsx": "react-jsx",
        "noEmit": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "strict": true,
        "noImplicitAny": false, // linter rule needed
        "allowUnreachableCode": true,
        "noImplicitReturns": true, // would be great to check
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true, //still very buggy. might be commented
        "useUnknownInCatchVariables": false,
        "noUncheckedIndexedAccess": true, //disabling in 90%, doesn't work well with .split() and isn't convenient to use in destructuring
        // "noPropertyAccessFromIndexSignature": true // I don't think that I need that
        // "keyofStringsOnly": true
        // "noErrorTruncation": true // could be useful sometimes
        // todo linter ban usage { [k: ] }
    },
    "include": [
        "../../../src"
    ]
}
